@{
    ViewData["Title"] = "Apresentação";
    Layout = "_Layout";
}

<div class="text-center">
    <h1 class="display-4 mb-3">Bem-vindo ao meu estudo da ferramenta Identity!</h1>
    <p class="lead text-muted mb-4">Projeto ASP.NET Core com Identity, focado em autenticação, autorização e boas práticas.</p>

    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <div class="alert alert-success mb-4" role="alert">
            <strong>Olá, @User.Identity!.Name!</strong> Você está autenticado.
        </div>
        <div class="d-flex justify-content-center gap-2 mb-4">
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Home/Gerenciar">Gerenciar conta</a>
            <form asp-area="Identity" asp-page="/Home/Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-outline-secondary">Sair</button>
            </form>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-center gap-2 mb-4">
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Home/Cadastrar">Criar conta</a>
            <a class="btn btn-outline-secondary" asp-area="Identity" asp-page="/Home/Login">Entrar</a>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card bg-dark shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title mb-3">O que este projeto demonstra</h5>
                    <ul class="list-unstyled text-start mb-4">
                        <li>• Registro, login, confirmação e recuperação de senha</li>
                        <li>• Autorização com Roles e policies</li>
                        <li>• Proteção de páginas com [Authorize]</li>
                        <li>• Validações e mensagens de erro amigáveis</li>
                        <li>• Layout responsivo com Bootstrap</li>
                    </ul>

                    <h6 class="text-uppercase text-muted mb-2">Stack</h6>
                    <div class="d-flex flex-wrap justify-content-center gap-2 mb-3">
                        <span class="badge">ASP.NET Core</span>
                        <span class="badge">Razor Pages</span>
                        <span class="badge">Identity</span>
                        <span class="badge">EF Core</span>
                        <span class="badge">SQLite</span>
                    </div>

                    <div class="d-flex justify-content-center gap-2">
                        <a class="btn btn-primary" href="https://github.com/SEU_USUARIO/SEU_REPO" target="_blank" rel="noopener">Código no GitHub</a>
                        <a class="btn btn-outline-secondary" href="https://learn.microsoft.com/aspnet/core/security/authentication/identity" target="_blank" rel="noopener">Docs Identity</a>
                    </div>
                </div>
            </div>
        </div>
    </div>     
    
</div>
